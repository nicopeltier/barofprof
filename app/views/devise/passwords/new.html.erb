<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag "logo_peps.png", alt: "Baroprof", class: "mx-auto h-10 w-auto dark:hidden" %>
    <%= image_tag "logo_peps.png", alt: "Baroprof", class: "mx-auto h-10 w-auto not-dark:hidden" %>
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900 dark:text-white">Mot de passe oubliÃ© ?</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with model: resource, url: password_path(resource_name), class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email, "Adresse email", class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.submit "Envoyer les instructions", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm/6 text-gray-500 dark:text-gray-400">
      Vous vous souvenez de votre mot de passe ?
      <%= link_to "Se connecter", new_session_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300" %>
    </p>
  </div>
</div>
