<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="text-center text-2xl/9 font-bold tracking-tight text-gray-900 dark:text-white">Modifier mon compte</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-md">
    <%= form_with model: resource, url: registration_path(resource_name), method: :put, class: "space-y-6" do |f| %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="rounded-md bg-blue-50 p-4 dark:bg-blue-900/20">
          <p class="text-sm text-blue-700 dark:text-blue-300">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        </div>
      <% end %>

      <!-- Informations du profil utilisateur -->
      <div class="rounded-md bg-gray-50 p-4 dark:bg-gray-800/50">
        <p class="text-sm font-medium text-gray-900 dark:text-gray-100">
          Vous avez un profil : 
          <span class="font-semibold text-indigo-600 dark:text-indigo-400">
            <%= current_user.admin? ? "ADMIN" : "DIRECTEUR" %>
          </span>
        </p>
        <% unless current_user.admin? %>
          <% if current_school %>
            <p class="text-sm text-gray-700 dark:text-gray-300 mt-1">
              École : <span class="font-medium"><%= current_school.name %></span>
            </p>
          <% end %>
        <% end %>
      </div>

      <div>
        <%= f.label :email, "Adresse email", class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
        <div class="mt-2">
          <%= f.email_field :email, autocomplete: "email", required: true, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :password, "Mot de passe", class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
        <p class="text-xs text-gray-500 dark:text-gray-400">Laissez vide si vous ne souhaitez pas le modifier</p>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :current_password, "Mot de passe actuel", class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
        <p class="text-xs text-gray-500 dark:text-gray-400">Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications</p>
        <div class="mt-2">
          <%= f.password_field :current_password, autocomplete: "current-password", required: true, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.submit "Mettre à jour", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500" %>
      </div>
    <% end %>

    <div class="mt-8">
      <%= button_to "Supprimer mon compte", registration_path(resource_name), method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: "w-full rounded-md border border-red-300 px-3 py-2 text-sm/6 font-medium text-red-600 hover:bg-red-50 dark:border-red-700 dark:text-red-400 dark:hover:bg-red-900/10" %>
    </div>

    <div class="mt-6">
      <%= link_to "Retour", :back, class: "text-sm text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200" %>
    </div>
  </div>
</div>
