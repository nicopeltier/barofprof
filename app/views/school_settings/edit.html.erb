<div class="px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-4xl">
    <!-- Header -->
    <div class="mb-8">
      <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
          <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:truncate sm:text-3xl sm:tracking-tight">
            Paramètres de l'école
          </h1>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Sélectionnez les thèmes à inclure dans le questionnaire (1 à 8 thèmes)
          </p>
        </div>
      </div>
    </div>

    <!-- Alerte si modification impossible -->
    <% unless @school.can_modify_themes? %>
      <div class="mb-6 rounded-md bg-yellow-50 p-4 dark:bg-yellow-900/20">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
              Modification impossible
            </h3>
            <div class="mt-2 text-sm text-yellow-700 dark:text-yellow-300">
              <% 
                current_survey = @school.surveys.order(created_at: :desc).first
                survey_status_text = current_survey&.status == 'launched' ? 'en cours' : 'clôturée'
              %>
              <p>Les thèmes ne peuvent plus être modifiés car une enquête est <%= survey_status_text %>.</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Tableau des thèmes -->
    <div class="mt-8 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-700">
              <thead class="bg-gray-50 dark:bg-gray-800">
                <tr>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 dark:text-white sm:pl-6">
                    Numéro
                  </th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">
                    Thème
                  </th>
                  <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900 dark:text-white">
                    Statut
                  </th>
                  <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900 dark:text-white">
                    Action
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white dark:divide-gray-700 dark:bg-gray-900">
                <% @themes.each do |theme| %>
                  <% selected = @school.theme_selected?(theme.id) %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 dark:text-white sm:pl-6">
                      <%= theme.number %>
                    </td>
                    <td class="px-3 py-4 text-sm text-gray-900 dark:text-white">
                      <%= theme.name %>
                    </td>
                    <td class="px-3 py-4 text-center">
                      <% if selected %>
                        <span class="text-green-600 font-bold dark:text-green-400">
                          Sélectionné
                        </span>
                      <% else %>
                        <span class="text-red-600 font-bold dark:text-red-400">
                          Désélectionné
                        </span>
                      <% end %>
                    </td>
                    <td class="px-3 py-4 text-center">
                      <% if @school.can_modify_themes? %>
                        <% if selected %>
                          <%= link_to toggle_theme_school_settings_path(theme_id: theme.id),
                                method: :patch,
                                data: { "turbo-method": "patch" },
                                class: "inline-flex items-center rounded-md px-3 py-2 text-sm font-semibold text-white bg-red-600 hover:bg-red-500 shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" do %>
                            Exclure
                          <% end %>
                        <% else %>
                          <%= link_to toggle_theme_school_settings_path(theme_id: theme.id),
                                method: :patch,
                                data: { "turbo-method": "patch" },
                                class: "inline-flex items-center rounded-md px-3 py-2 text-sm font-semibold text-white bg-green-600 hover:bg-green-500 shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600" do %>
                            Inclure
                          <% end %>
                        <% end %>
                      <% else %>
                        <span class="inline-flex items-center rounded-md bg-gray-100 px-3 py-2 text-sm font-medium text-gray-400 dark:bg-gray-800 dark:text-gray-500">
                          <%= selected ? 'Exclure' : 'Inclure' %>
                        </span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Résumé -->
    <div class="mt-6 rounded-lg bg-blue-50 p-4 dark:bg-blue-900/20">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">
            Thèmes sélectionnés : <%= @school.selected_theme_ids.count %>/8
          </h3>
          <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
            <p>Vous pouvez sélectionner entre 1 et 8 thèmes pour constituer votre questionnaire.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
