<%= form_with model: [:backoffice, @theme], local: true, class: "space-y-6" do |form| %>
  <% if @theme.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 dark:bg-red-900/50">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            <%= pluralize(@theme.errors.count, "erreur") %> empêche(nt) l'enregistrement :
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% @theme.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <div class="sm:col-span-2">
      <%= form.label :number, "Numéro", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
      <div class="mt-2">
        <%= form.number_field :number, 
              class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:focus:ring-indigo-500",
              placeholder: "1" %>
      </div>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Numéro d'ordre de la thématique.</p>
    </div>

    <div class="sm:col-span-4">
      <%= form.label :name, "Nom de la thématique", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
      <div class="mt-2">
        <%= form.text_field :name, 
              class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:focus:ring-indigo-500",
              placeholder: "Ex: Climat scolaire" %>
      </div>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Le nom descriptif de la thématique.</p>
    </div>

    <div class="sm:col-span-6">
      <div class="flex items-center">
        <%= form.check_box :active, 
              class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600 dark:border-gray-600 dark:bg-gray-700 dark:focus:ring-indigo-500" %>
        <%= form.label :active, "Thématique active", class: "ml-2 block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
      </div>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Une thématique inactive ne sera pas proposée dans les questionnaires.</p>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= link_to "Annuler", backoffice_themes_path, 
          class: "text-sm font-semibold leading-6 text-gray-900 dark:text-white" %>
    <%= form.submit (@theme.new_record? ? "Créer la thématique" : "Mettre à jour"),
          class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>
